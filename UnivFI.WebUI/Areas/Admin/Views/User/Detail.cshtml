@using UnivFI.WebUI.Areas.Admin.ViewModels.User
@model UserViewModel

@{
    ViewData["Title"] = "사용자 상세 정보";
    var returnPage = (int)(ViewBag.ReturnPage ?? 1);
    var returnPageSize = (int)(ViewBag.ReturnPageSize ?? 10);
    var returnSearchTerm = (string)(ViewBag.ReturnSearchTerm ?? "");
    var returnSearchFields = (string)(ViewBag.ReturnSearchFields ?? "");
}

<div class="container mx-auto px-4 py-6">
    <div class="max-w-4xl mx-auto">
        <!-- 헤더 섹션 - 제목과 네비게이션 -->
        <div class="mb-6">
            <div class="flex justify-between items-center">
                <h1 class="text-2xl font-bold">@ViewData["Title"] - @Model.Name</h1>
            </div>
            <div class="h-0.5 bg-gray-200 w-full mt-4"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <!-- 기본 정보 카드 -->
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="bg-blue-50 px-6 py-4 border-b border-blue-100">
                    <h2 class="text-xl font-semibold text-blue-800 flex items-center">
                        <i class="bi bi-person-badge mr-2"></i> 기본 정보
                    </h2>
                </div>
                <div class="p-6">
                    <div class="space-y-4">
                        <div class="flex flex-col">
                            <span class="text-gray-500 text-sm font-medium">ID</span>
                            <span class="text-lg font-semibold">@Model.Id</span>
                        </div>
                        <div class="flex flex-col">
                            <span class="text-gray-500 text-sm font-medium">이름</span>
                            <span class="text-lg font-semibold">@Model.Name</span>
                        </div>
                        <div class="flex flex-col">
                            <span class="text-gray-500 text-sm font-medium">이메일</span>
                            <span class="text-lg">
                                <a href="mailto:@Model.Email"
                                    class="text-blue-600 hover:text-blue-800 transition-colors">
                                    @Model.Email
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 시스템 정보 카드 -->
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="bg-gray-50 px-6 py-4 border-b">
                    <h2 class="text-xl font-semibold text-gray-700 flex items-center">
                        <i class="bi bi-gear mr-2"></i> 시스템 정보
                    </h2>
                </div>
                <div class="p-6">
                    <div class="space-y-4">
                        <div class="flex flex-col">
                            <span class="text-gray-500 text-sm font-medium">생성일</span>
                            <span class="text-base">
                                <i class="bi bi-calendar-plus text-gray-600 mr-1"></i> @Model.FormattedCreatedAt
                            </span>
                        </div>
                        <div class="flex flex-col">
                            <span class="text-gray-500 text-sm font-medium">마지막 업데이트</span>
                            <span class="text-base">
                                <i class="bi bi-calendar-check text-gray-600 mr-1"></i> @Model.FormattedUpdatedAt
                            </span>
                        </div>
                        <div class="flex flex-col">
                            <span class="text-gray-500 text-sm font-medium">마지막 로그인</span>
                            <span class="text-base">
                                <i class="bi bi-box-arrow-in-right text-gray-600 mr-1"></i>
                                @(Model.FormattedLastLoginAt ?? "로그인 기록 없음")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- 역할 정보 카드 -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-gray-50 px-6 py-4 border-b flex justify-between items-center">
                <h2 class="text-xl font-semibold text-gray-700 flex items-center">
                    <i class="bi bi-key mr-2"></i> 사용자 역할 현황
                </h2>
                <a asp-action="ManageRoles" asp-route-id="@Model.Id" asp-route-returnPage="@returnPage"
                    asp-route-returnPageSize="@returnPageSize" asp-route-returnSearchTerm="@returnSearchTerm"
                    asp-route-returnSearchFields="@returnSearchFields"
                    class="text-blue-600 hover:text-blue-800 transition-colors flex items-center text-sm">
                    <i class="bi bi-gear-fill mr-1"></i> 역할 관리
                </a>
            </div>
            <div class="p-6">
                @if (Model.Roles != null && Model.Roles.Any())
                {
                    <div class="flex flex-wrap gap-2">
                        @foreach (var role in Model.Roles)
                        {
                            <span class="inline-flex items-center px-3 py-1.5 bg-blue-100 text-blue-800 rounded-full text-sm">
                                <i class="bi bi-person-check mr-1"></i> @role
                            </span>
                        }
                    </div>
                }
                else
                {
                    <div class="flex items-center p-4 bg-yellow-50 text-yellow-700 rounded">
                        <i class="bi bi-exclamation-triangle mr-2"></i>
                        <span>할당된 역할이 없습니다.</span>
                    </div>
                }
            </div>
        </div>

        <!-- 하단 액션 버튼 그룹 -->
        <div class="flex justify-between items-center border-t border-gray-200 pt-6">
            <a asp-action="Index" asp-route-page="@returnPage" asp-route-pageSize="@returnPageSize"
                asp-route-searchTerm="@returnSearchTerm" asp-route-searchFields="@returnSearchFields"
                class="px-5 py-2.5 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors flex items-center">
                <i class="bi bi-arrow-left mr-2"></i> 목록으로 돌아가기
            </a>
            <div class="flex space-x-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-returnPage="@returnPage"
                    asp-route-returnPageSize="@returnPageSize" asp-route-returnSearchTerm="@returnSearchTerm"
                    asp-route-returnSearchFields="@returnSearchFields"
                    class="px-5 py-2.5 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors flex items-center">
                    <i class="bi bi-pencil mr-2"></i> 수정
                </a>
                <button type="button"
                    class="px-5 py-2.5 bg-red-600 text-white rounded hover:bg-red-700 transition-colors flex items-center"
                    onclick="openDeleteModal()">
                    <i class="bi bi-trash mr-2"></i> 삭제
                </button>
            </div>
        </div>
    </div>
</div>

<!-- 삭제 확인 모달 -->
<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
    <div class="bg-white rounded-lg max-w-md w-full p-6 shadow-2xl transform transition-all">
        <div class="mb-4 flex items-center">
            <i class="bi bi-exclamation-triangle-fill text-red-600 text-xl mr-2"></i>
            <h3 class="text-lg font-semibold">사용자 삭제 확인</h3>
        </div>
        <div class="mb-6">
            <p>사용자 <strong class="text-blue-700">@Model.Name</strong>을(를) 삭제하시겠습니까?</p>
            <p class="text-red-600 mt-2 flex items-center">
                <i class="bi bi-info-circle mr-1"></i> 이 작업은 되돌릴 수 없습니다.
            </p>
        </div>
        <div class="flex justify-end space-x-3">
            <button type="button"
                class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition-colors flex items-center"
                onclick="closeDeleteModal()">
                <i class="bi bi-x-circle mr-1"></i> 취소
            </button>
            <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                <input type="hidden" name="returnPage" value="@returnPage" />
                <input type="hidden" name="returnPageSize" value="@returnPageSize" />
                <input type="hidden" name="returnSearchTerm" value="@returnSearchTerm" />
                <input type="hidden" name="returnSearchFields" value="@returnSearchFields" />
                <button type="submit"
                    class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition-colors flex items-center">
                    <i class="bi bi-trash-fill mr-1"></i> 삭제
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openDeleteModal() {
            document.getElementById('deleteModal').classList.remove('hidden');
            document.getElementById('deleteModal').classList.add('flex');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
            document.getElementById('deleteModal').classList.remove('flex');
        }

        // 모달 외부 클릭 시 닫기
        document.getElementById('deleteModal').addEventListener('click', function (e) {
            if (e.target === this) {
                closeDeleteModal();
            }
        });
    </script>
}