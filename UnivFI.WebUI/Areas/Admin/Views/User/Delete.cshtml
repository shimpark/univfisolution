@using UnivFI.WebUI.Areas.Admin.ViewModels.User
@model UserViewModel

@{
    ViewData["Title"] = "사용자 삭제";
    var returnPage = (int)(ViewBag.ReturnPage ?? 1);
    var returnPageSize = (int)(ViewBag.ReturnPageSize ?? 10);
    var returnSearchTerm = (string)(ViewBag.ReturnSearchTerm ?? "");
    var returnSearchFields = (string)(ViewBag.ReturnSearchFields ?? "");
}

<div class="container mx-auto px-4 py-6">
    <div class="max-w-3xl mx-auto">
        <div class="flex items-center mb-6">
            <a asp-action="Index" asp-route-page="@returnPage" asp-route-pageSize="@returnPageSize"
                asp-route-searchTerm="@returnSearchTerm" asp-route-searchFields="@returnSearchFields"
                class="text-blue-600 hover:text-blue-800 transition-colors mr-3">
                <i class="bi bi-arrow-left"></i> 목록으로
            </a>
            <h1 class="text-2xl font-bold text-red-600">@ViewData["Title"] - @Model.Name</h1>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="mb-6">
                <div class="flex items-center text-red-600 mb-4">
                    <i class="bi bi-exclamation-triangle-fill text-2xl mr-2"></i>
                    <h2 class="text-xl font-semibold">정말로 이 사용자를 삭제하시겠습니까?</h2>
                </div>
                <p class="text-gray-700">이 작업은 되돌릴 수 없으며, 사용자 관련 모든 데이터가 영구적으로 삭제됩니다.</p>
            </div>

            <div class="border-t border-gray-200 pt-4 mb-4">
                <h3 class="text-lg font-semibold mb-2">사용자 정보</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <p class="text-gray-600 text-sm">ID</p>
                        <p class="font-semibold">@Model.Id</p>
                    </div>
                    <div>
                        <p class="text-gray-600 text-sm">이름</p>
                        <p class="font-semibold">@Model.Name</p>
                    </div>
                    <div>
                        <p class="text-gray-600 text-sm">이메일</p>
                        <p class="font-semibold">@Model.Email</p>
                    </div>
                    <div>
                        <p class="text-gray-600 text-sm">생성일</p>
                        <p class="font-semibold">@Model.FormattedCreatedAt</p>
                    </div>
                </div>
            </div>

            <div class="border-t border-gray-200 pt-4">
                <h3 class="text-lg font-semibold mb-2">사용자 역할</h3>
                @if (Model.Roles != null && Model.Roles.Any())
                {
                    <div class="flex flex-wrap gap-2">
                        @foreach (var role in Model.Roles)
                        {
                            <span class="inline-flex items-center px-3 py-1.5 bg-blue-100 text-blue-800 rounded-full text-sm">
                                <i class="bi bi-person-check mr-1"></i> @role
                            </span>
                        }
                    </div>
                }
                else
                {
                    <p class="text-gray-600">역할이 없습니다.</p>
                }
            </div>

            <div class="flex justify-between items-center mt-6">
                <a asp-action="Index" asp-route-page="@returnPage" asp-route-pageSize="@returnPageSize"
                    asp-route-searchTerm="@returnSearchTerm" asp-route-searchFields="@returnSearchFields"
                    class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition-colors">
                    <i class="bi bi-x mr-1"></i> 취소
                </a>
                <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" name="returnPage" value="@returnPage" />
                    <input type="hidden" name="returnPageSize" value="@returnPageSize" />
                    <input type="hidden" name="returnSearchTerm" value="@returnSearchTerm" />
                    <input type="hidden" name="returnSearchFields" value="@returnSearchFields" />
                    <button type="submit"
                        class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition-colors">
                        <i class="bi bi-trash mr-1"></i> 삭제
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>