@using UnivFI.WebUI.Areas.Admin.ViewModels.User
@model UnivFI.WebUI.Areas.Admin.ViewModels.User.UserCreateViewModel

@{
    ViewData["Title"] = "새 사용자 추가";
}

<div class="container mx-auto p-4">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold">@ViewData["Title"]</h1>
        <a asp-action="Index" asp-route-page="@ViewBag.ReturnPage" asp-route-pageSize="@ViewBag.ReturnPageSize"
            asp-route-searchTerm="@ViewBag.ReturnSearchTerm" asp-route-searchFields="@ViewBag.ReturnSearchFields"
            class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition-colors">
            <i class="bi bi-arrow-left mr-1"></i> 목록으로
        </a>
    </div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <form asp-action="Create" method="post" class="p-6">
            <div asp-validation-summary="ModelOnly" class="p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg"></div>

            <input type="hidden" name="returnPage" value="@ViewBag.ReturnPage" />
            <input type="hidden" name="returnPageSize" value="@ViewBag.ReturnPageSize" />
            <input type="hidden" name="returnSearchTerm" value="@ViewBag.ReturnSearchTerm" />
            <input type="hidden" name="returnSearchFields" value="@ViewBag.ReturnSearchFields" />

            <div class="mb-4">
                <label asp-for="UserName" class="block text-gray-700 font-medium mb-2">아이디</label>
                <input asp-for="UserName"
                    class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="UserName" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-700 font-medium mb-2">이메일</label>
                <input asp-for="Email"
                    class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Name" class="block text-gray-700 font-medium mb-2">이름</label>
                <input asp-for="Name"
                    class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="block text-gray-700 font-medium mb-2">비밀번호</label>
                <input asp-for="Password" type="password"
                    class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="block text-gray-700 font-medium mb-2">비밀번호 확인</label>
                <input asp-for="ConfirmPassword" type="password"
                    class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex justify-between items-center mt-6">
                <button type="submit"
                    class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors">
                    <i class="bi bi-check2 mr-1"></i> 저장
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}