@{
    ViewData["Title"] = "관리자 대시보드";
}

<div class="container mx-auto px-4 py-6">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800">관리자 대시보드</h1>
        <p class="text-gray-600 mt-2">UnivFI 시스템 관리 대시보드입니다.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- 사용자 카드 -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="p-5 flex justify-between items-center">
                <div>
                    <div class="text-xl font-bold text-gray-800 mb-1">사용자 관리</div>
                    <div class="text-sm text-gray-500">시스템 사용자 관리</div>
                </div>
                <div class="text-teal-500 bg-teal-50 rounded-full p-3">
                    <i class="fas fa-users text-xl"></i>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
                <a href="@Url.Action("Index", "User", new { area = "Admin" })"
                    class="text-teal-600 hover:text-teal-800 flex items-center justify-between">
                    <span>관리 페이지로 이동</span>
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <!-- 역할 카드 -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="p-5 flex justify-between items-center">
                <div>
                    <div class="text-xl font-bold text-gray-800 mb-1">역할 관리</div>
                    <div class="text-sm text-gray-500">시스템 역할 관리</div>
                </div>
                <div class="text-blue-500 bg-blue-50 rounded-full p-3">
                    <i class="fas fa-user-tag text-xl"></i>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
                <a href="@Url.Action("Index", "Role", new { area = "Admin" })"
                    class="text-blue-600 hover:text-blue-800 flex items-center justify-between">
                    <span>관리 페이지로 이동</span>
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <!-- 메뉴 카드 -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="p-5 flex justify-between items-center">
                <div>
                    <div class="text-xl font-bold text-gray-800 mb-1">메뉴 관리</div>
                    <div class="text-sm text-gray-500">시스템 메뉴 관리</div>
                </div>
                <div class="text-indigo-500 bg-indigo-50 rounded-full p-3">
                    <i class="fas fa-bars text-xl"></i>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
                <a href="@Url.Action("Index", "Menu", new { area = "Admin" })"
                    class="text-indigo-600 hover:text-indigo-800 flex items-center justify-between">
                    <span>관리 페이지로 이동</span>
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <!-- 사용자 역할 카드 -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="p-5 flex justify-between items-center">
                <div>
                    <div class="text-xl font-bold text-gray-800 mb-1">사용자 역할</div>
                    <div class="text-sm text-gray-500">사용자 역할 할당 관리</div>
                </div>
                <div class="text-purple-500 bg-purple-50 rounded-full p-3">
                    <i class="fas fa-user-shield text-xl"></i>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
                <a href="@Url.Action("Index", "UserRole", new { area = "Admin" })"
                    class="text-purple-600 hover:text-purple-800 flex items-center justify-between">
                    <span>관리 페이지로 이동</span>
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- 최근 활동 -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="p-5 border-b border-gray-200">
                <h2 class="text-xl font-bold text-gray-800">최근 활동</h2>
            </div>
            <div class="p-5">
                <div class="space-y-4">
                    <div class="flex items-start space-x-3">
                        <div
                            class="flex-shrink-0 w-10 h-10 rounded-full bg-teal-500 flex items-center justify-center text-white">
                            <i class="fas fa-user"></i>
                        </div>
                        <div>
                            <p class="text-sm font-medium">새 사용자가 등록되었습니다.</p>
                            <p class="text-xs text-gray-500">방금 전</p>
                        </div>
                    </div>
                    <div class="flex items-start space-x-3">
                        <div
                            class="flex-shrink-0 w-10 h-10 rounded-full bg-blue-500 flex items-center justify-center text-white">
                            <i class="fas fa-user-tag"></i>
                        </div>
                        <div>
                            <p class="text-sm font-medium">역할이 업데이트되었습니다.</p>
                            <p class="text-xs text-gray-500">1시간 전</p>
                        </div>
                    </div>
                    <div class="flex items-start space-x-3">
                        <div
                            class="flex-shrink-0 w-10 h-10 rounded-full bg-indigo-500 flex items-center justify-center text-white">
                            <i class="fas fa-bars"></i>
                        </div>
                        <div>
                            <p class="text-sm font-medium">메뉴 구조가 변경되었습니다.</p>
                            <p class="text-xs text-gray-500">3시간 전</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 시스템 정보 -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="p-5 border-b border-gray-200">
                <h2 class="text-xl font-bold text-gray-800">시스템 정보</h2>
            </div>
            <div class="p-5">
                <div class="space-y-4">
                    <div class="flex justify-between">
                        <span class="text-gray-600">운영체제</span>
                        <span class="font-medium">Windows Server 2022</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">웹 서버</span>
                        <span class="font-medium">IIS 10.0</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">데이터베이스</span>
                        <span class="font-medium">SQL Server 2019</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">프레임워크</span>
                        <span class="font-medium">.NET Core 8.0</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">메모리 사용률</span>
                        <div class="w-32 bg-gray-200 rounded-full h-2.5 mt-2">
                            <div class="bg-teal-600 h-2.5 rounded-full" style="width: 45%"></div>
                        </div>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">CPU 사용률</span>
                        <div class="w-32 bg-gray-200 rounded-full h-2.5 mt-2">
                            <div class="bg-teal-600 h-2.5 rounded-full" style="width: 32%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>