@using UnivFI.WebUI.Areas.Admin.ViewModels.Role
@model RoleViewModel

@{
    ViewData["Title"] = "역할 삭제";
    int assignedMenuCount = ViewBag.AssignedMenuCount ?? 0;
    int assignedUserCount = ViewBag.AssignedUserCount ?? 0;
    var returnPage = (int)(ViewBag.ReturnPage ?? 1);
    var returnPageSize = (int)(ViewBag.ReturnPageSize ?? 10);
    var returnSearchTerm = (string)(ViewBag.ReturnSearchTerm ?? "");
    var returnSearchFields = (string)(ViewBag.ReturnSearchFields ?? "");
}

<div class="container mx-auto px-4 py-6">
    <div class="max-w-3xl mx-auto">
        <div class="flex items-center mb-6">
            <a asp-action="Index" asp-route-page="@returnPage" asp-route-pageSize="@returnPageSize"
                asp-route-searchTerm="@returnSearchTerm" asp-route-searchFields="@returnSearchFields"
                class="text-blue-600 hover:text-blue-800 transition-colors mr-3">
                <i class="bi bi-arrow-left"></i> 목록으로
            </a>
            <h1 class="text-2xl font-bold text-red-600">@ViewData["Title"] - @Model.RoleName</h1>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="mb-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">다음 역할을 정말 삭제하시겠습니까?</h2>
                <p class="text-red-600 mb-4">주의: 이 작업은 되돌릴 수 없으며, 연관된 모든 정보가 함께 삭제됩니다.</p>
            </div>

            <dl class="grid grid-cols-1 md:grid-cols-2 gap-4 border rounded-lg p-4 bg-gray-50 mb-6">
                <div>
                    <dt class="text-sm font-medium text-gray-500">ID</dt>
                    <dd class="text-lg text-gray-900">@Model.Id</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">역할명</dt>
                    <dd class="text-lg font-medium text-gray-900">@Model.RoleName</dd>
                </div>
                <div class="md:col-span-2">
                    <dt class="text-sm font-medium text-gray-500">설명</dt>
                    <dd class="text-lg text-gray-900">@Model.RoleComment</dd>
                </div>
            </dl>

            <div class="flex justify-between items-center">
                <a asp-action="Index" asp-route-page="@returnPage" asp-route-pageSize="@returnPageSize"
                    asp-route-searchTerm="@returnSearchTerm" asp-route-searchFields="@returnSearchFields"
                    class="px-5 py-2.5 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors">
                    <i class="bi bi-x-lg mr-1"></i> 취소
                </a>

                <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" name="returnPage" value="@returnPage" />
                    <input type="hidden" name="returnPageSize" value="@returnPageSize" />
                    <input type="hidden" name="returnSearchTerm" value="@returnSearchTerm" />
                    <input type="hidden" name="returnSearchFields" value="@returnSearchFields" />
                    <button type="submit"
                        class="px-5 py-2.5 bg-red-600 text-white rounded hover:bg-red-700 transition-colors">
                        <i class="bi bi-trash mr-1"></i> 삭제 확인
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>