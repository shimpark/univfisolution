@using UnivFI.WebUI.Areas.Admin.ViewModels.UserRole
@model IEnumerable<UserRoleViewModel>
@{
    ViewData["Title"] = "역할별 사용자 관리";
}

<div class="container mx-auto px-4 py-6">
    <h1 class="text-2xl font-bold mb-4">역할별 사용자 관리: @ViewBag.RoleName</h1>
    <div class="h-0.5 bg-gray-200 w-full mb-6"></div>

    <div class="flex flex-wrap gap-2 mb-6">
        <a asp-action="Assign" asp-route-preSelectedRoleId="@ViewBag.RoleId"
            class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors">
            <i class="fas fa-plus-circle mr-2"></i> 새 사용자 할당
        </a>
        <a asp-controller="Role" asp-action="Detail" asp-route-id="@ViewBag.RoleId"
            class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition-colors">
            <i class="fas fa-arrow-left mr-2"></i> 역할 상세로 돌아가기
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="bg-green-500 text-white px-6 py-4">
            <h2 class="font-semibold text-lg">할당된 사용자 목록</h2>
        </div>
        <div class="p-6">
            @if (Model != null && Model.Any())
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    사용자 ID
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    역할 ID
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    사용자 이름
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    역할 이름
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    작업
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var userRole in Model)
                            {
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap">@userRole.UserId</td>
                                    <td class="px-6 py-4 whitespace-nowrap">@userRole.RoleId</td>
                                    <td class="px-6 py-4 whitespace-nowrap">@userRole.UserName</td>
                                    <td class="px-6 py-4 whitespace-nowrap">@userRole.RoleName</td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex space-x-2">
                                            <a asp-controller="User" asp-action="Detail" asp-route-id="@userRole.UserId"
                                                class="inline-flex items-center px-3 py-1 bg-blue-100 text-blue-700 rounded text-sm hover:bg-blue-200 transition-colors">
                                                <i class="fas fa-info-circle mr-1"></i> 사용자 상세
                                            </a>
                                            <button type="button" onclick="removeUserRole(@userRole.UserId, @userRole.RoleId)"
                                                class="inline-flex items-center px-3 py-1 bg-red-600 text-white rounded text-sm hover:bg-red-700 transition-colors">
                                                <i class="fas fa-trash mr-1"></i> 제거
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="bg-green-50 text-green-700 p-4 rounded">
                    이 역할에 할당된 사용자가 없습니다.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function removeUserRole(userId, roleId) {
            if (confirm('이 역할에서 사용자를 제거하시겠습니까?')) {
                $.ajax({
                    url: '@Url.Action("Remove")',
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                        UserId: userId,
                        RoleId: roleId
                    },
                    success: function (result) {
                        // 성공 시 페이지 새로고침
                        location.reload();
                    },
                    error: function () {
                        alert('사용자 제거 중 오류가 발생했습니다.');
                    }
                });
            }
        }
    </script>
}