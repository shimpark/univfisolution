@using UnivFI.WebUI.Areas.Admin.ViewModels.Menu
@model MenuViewModel

@{
    ViewData["Title"] = "메뉴 상세 정보";
    var assignedRoles = ViewBag.AssignedRoles as List<RoleEntity>;
    var returnPage = ViewBag.ReturnPage ?? 1;
    var returnPageSize = ViewBag.ReturnPageSize ?? 10;
    var returnSearchTerm = ViewBag.ReturnSearchTerm as string ?? string.Empty;
    var returnSearchFields = ViewBag.ReturnSearchFields as string ?? string.Empty;
}

<div class="container mx-auto px-4 py-6">
    <h1 class="text-2xl font-bold mb-4">메뉴 상세 정보</h1>
    <div class="h-0.5 bg-gray-200 w-full mb-6"></div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="bg-gray-50 px-6 py-4 border-b">
                    <h2 class="font-semibold text-lg">기본 정보</h2>
                </div>
                <div class="p-6">
                    <div class="space-y-4">
                        <div class="grid grid-cols-3 gap-4">
                            <div class="text-gray-500 font-medium">ID</div>
                            <div class="col-span-2">@Model.Id</div>
                        </div>
                        <div class="grid grid-cols-3 gap-4">
                            <div class="text-gray-500 font-medium">메뉴 키</div>
                            <div class="col-span-2">@Model.MenuKey</div>
                        </div>
                        <div class="grid grid-cols-3 gap-4">
                            <div class="text-gray-500 font-medium">제목</div>
                            <div class="col-span-2">@Model.Title</div>
                        </div>
                        <div class="grid grid-cols-3 gap-4">
                            <div class="text-gray-500 font-medium">URL</div>
                            <div class="col-span-2">@Model.Url</div>
                        </div>
                        <div class="grid grid-cols-3 gap-4">
                            <div class="text-gray-500 font-medium">메뉴 순서</div>
                            <div class="col-span-2">@Model.MenuOrder</div>
                        </div>
                        <div class="grid grid-cols-3 gap-4">
                            <div class="text-gray-500 font-medium">상위 메뉴 ID</div>
                            <div class="col-span-2">@(Model.ParentId.HasValue? Model.ParentId.Value.ToString() : "없음")</div>
                        </div>
                        <div class="grid grid-cols-3 gap-4">
                            <div class="text-gray-500 font-medium">레벨</div>
                            <div class="col-span-2">@Model.Levels</div>
                        </div>
                        <div class="grid grid-cols-3 gap-4">
                            <div class="text-gray-500 font-medium">새 아이콘 사용</div>
                            <div class="col-span-2">@(Model.UseNewIcon == true ? "사용" : "사용 안함")</div>
                        </div>
                        @if (Model.CreatedAt.HasValue)
                        {
                                    <div class="grid grid-cols-3 gap-4">
                                        <div class="text-gray-500 font-medium">생성일</div>
                                        <div class="col-span-2">@Model.CreatedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</div>
                                    </div>
                        }
                        @if (Model.UpdatedAt.HasValue)
                        {
                                    <div class="grid grid-cols-3 gap-4">
                                        <div class="text-gray-500 font-medium">수정일</div>
                                        <div class="col-span-2">@Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</div>
                                    </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="bg-gray-50 px-6 py-4 border-b">
                    <h2 class="font-semibold text-lg">할당된 역할</h2>
                </div>
                <div class="p-6">
                    @if (assignedRoles != null && assignedRoles.Any())
                    {
                                <div class="divide-y divide-gray-200">
                                    @foreach (var role in assignedRoles)
                                    {
                                                <div class="py-3 flex justify-between items-center">
                                                    <span class="text-gray-700">@role.RoleName</span>
                                                    <span class="text-sm text-gray-500">@(string.IsNullOrEmpty(role.RoleComment) ? "" : role.RoleComment)</span>
                                                </div>
                                    }
                                </div>
                    }
                    else
                    {
                                <div class="bg-blue-50 text-blue-700 p-4 rounded">
                                    이 메뉴에 할당된 역할이 없습니다.
                                </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="flex space-x-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" 
           asp-route-returnPage="@returnPage"
           asp-route-returnPageSize="@returnPageSize"
           asp-route-returnSearchTerm="@returnSearchTerm" 
           asp-route-returnSearchFields="@returnSearchFields"
           class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors">
            <i class="fas fa-edit mr-1"></i> 수정
        </a>
        <a asp-action="Index" 
           asp-route-page="@returnPage" 
           asp-route-pageSize="@returnPageSize"
           asp-route-searchTerm="@returnSearchTerm"
           asp-route-searchFields="@returnSearchFields" 
           class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition-colors">
            <i class="fas fa-list mr-1"></i> 목록으로
        </a>
    </div>
</div> 