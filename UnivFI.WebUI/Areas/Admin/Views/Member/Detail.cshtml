@model UnivFI.WebUI.Areas.Admin.ViewModels.Member.MemberViewModel

@{
    ViewData["Title"] = "멤버 상세 정보";
}

<div class="container mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h1 class="text-2xl font-bold text-gray-800">멤버 상세 정보</h1>
        </div>

        <div class="p-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <dt class="text-sm font-medium text-gray-500">사용자 이름</dt>
                    <dd class="mt-1 text-lg text-gray-900">@Model.UserName</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">이름</dt>
                    <dd class="mt-1 text-lg text-gray-900">@Model.Name</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">이메일</dt>
                    <dd class="mt-1 text-lg text-gray-900">@Model.Email</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">생성일</dt>
                    <dd class="mt-1 text-lg text-gray-900">@Model.FormattedCreatedAt</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">수정일</dt>
                    <dd class="mt-1 text-lg text-gray-900">@Model.FormattedUpdatedAt</dd>
                </div>

                <div class="md:col-span-2">
                    <dt class="text-sm font-medium text-gray-500">역할</dt>
                    <dd class="mt-2">
                        <div class="flex flex-wrap gap-2">
                            @foreach (var role in Model.Roles)
                            {
                                <span class="px-3 py-1 text-sm font-medium rounded-full bg-blue-100 text-blue-800">
                                    @role
                                </span>
                            }
                        </div>
                    </dd>
                </div>
            </dl>
        </div>

        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
            <div class="flex justify-end space-x-3">
                <button type="button" id="backToList"
                    class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    목록으로
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#backToList').click(function () {
                var returnParams = {
                    page: '@Model.ReturnSearch?.Page',
                    pagesize: '@Model.ReturnSearch?.PageSize',
                    searchterm: '@Html.Raw(Model.ReturnSearch?.SearchTerm)',
                    searchfields: '@Html.Raw(Model.ReturnSearch?.SearchFields)',
                    sortorder: '@Html.Raw(Model.ReturnSearch?.SortOrder)'
                };

                // 빈 값이나 null 값 제거
                Object.keys(returnParams).forEach(key =>
                    (returnParams[key] === '' || returnParams[key] === 'null' || returnParams[key] === undefined)
                    && delete returnParams[key]
                );

                // URL 생성
                var baseUrl = '@Url.Action("Index", "Member", new { area = "Admin" })';
                var queryString = $.param(returnParams);
                var url = baseUrl + (queryString ? '?' + queryString : '');

                // 페이지 이동
                window.location.href = url;
            });
        });
    </script>
}