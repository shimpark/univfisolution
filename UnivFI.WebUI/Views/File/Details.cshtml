@model UnivFI.Domain.Entities.FileAttachEntity

@{
    ViewData["Title"] = "파일 상세 정보";
}

<div class="container mx-auto px-4 py-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">파일 상세 정보</h2>

    <div class="max-w-3xl mx-auto">
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">@Model.FileName</h3>
            </div>

            <div class="px-6 py-4">
                <dl class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                    <div class="md:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">파일 ID</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.FileAttachId</dd>
                    </div>
                    <div class="md:col-span-2">
                        <dt class="text-sm font-medium text-gray-500">파일명</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.FileName</dd>
                    </div>

                    <div class="md:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">파일 타입</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.FileType</dd>
                    </div>
                    <div class="md:col-span-2">
                        <dt class="text-sm font-medium text-gray-500">파일 크기</dt>
                        <dd class="mt-1 text-sm text-gray-900">@FormatFileSize(Model.FileLength)</dd>
                    </div>

                    <div class="md:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">업로드 날짜</dt>
                        <dd class="mt-1 text-sm text-gray-900">@(Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm:ss"))</dd>
                    </div>

                    <div class="md:col-span-3">
                        <dt class="text-sm font-medium text-gray-500">파일 경로</dt>
                        <dd class="mt-1 text-sm text-gray-900 break-all">@Model.FilePath</dd>
                    </div>

                    <div class="md:col-span-3">
                        <dt class="text-sm font-medium text-gray-500">파일 GUID</dt>
                        <dd class="mt-1 text-sm text-gray-900 break-all">@Model.FileGUID</dd>
                    </div>
                </dl>

                @if (IsImageFile(Model.FileType))
                {
                    <div class="mt-6 border border-gray-200 rounded-lg overflow-hidden">
                        <div class="px-4 py-5 bg-gray-50 text-center text-sm font-medium text-gray-700">이미지 미리보기</div>
                        <div class="p-4 flex justify-center">
                            <img src="@Url.Action("Download", new { id = Model.FileAttachId })"
                                class="max-h-64 object-contain" alt="@Model.FileName" />
                        </div>
                    </div>
                }
            </div>

            <div
                class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex flex-col sm:flex-row justify-between items-center space-y-3 sm:space-y-0">
                <a asp-action="Index"
                    class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    목록으로
                </a>

                <div class="flex flex-wrap justify-center gap-2">
                    <a asp-action="Download" asp-route-id="@Model.FileAttachId"
                        class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                        </svg>
                        다운로드
                    </a>
                    <a asp-action="Share" asp-route-id="@Model.FileAttachId"
                        class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z">
                            </path>
                        </svg>
                        공유 링크
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.FileAttachId"
                        class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                            </path>
                        </svg>
                        삭제
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string FormatFileSize(long? bytes)
    {
        if (bytes == null) return "0 B";

        long fileSize = bytes.Value;
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        int order = 0;

        while (fileSize >= 1024 && order < sizes.Length - 1)
        {
            order++;
            fileSize = fileSize / 1024;
        }

        return $"{fileSize:0.##} {sizes[order]}";
    }

    private bool IsImageFile(string fileType)
    {
        if (string.IsNullOrEmpty(fileType)) return false;

        string[] imageExtensions = { ".jpg", ".jpeg", ".png", ".gif", ".bmp" };
        return Array.Exists(imageExtensions, ext => fileType.Equals(ext, StringComparison.OrdinalIgnoreCase));
    }
}