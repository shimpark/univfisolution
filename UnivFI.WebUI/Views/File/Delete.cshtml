@model UnivFI.Domain.Entities.FileAttachEntity

@{
    ViewData["Title"] = "파일 삭제";
}

<div class="container mx-auto px-4 py-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">파일 삭제</h2>
    
    <div class="max-w-2xl mx-auto">
        <div class="bg-white shadow rounded-lg overflow-hidden border border-red-300">
            <div class="px-6 py-4 bg-red-600 border-b border-red-800">
                <h3 class="text-lg font-medium text-white">삭제 확인</h3>
            </div>
            
            <div class="px-6 py-4">
                <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-yellow-700">
                                이 작업은 되돌릴 수 없습니다. 파일을 삭제하면 Amazon S3에서도 영구적으로 제거됩니다.
                            </p>
                        </div>
                    </div>
                </div>
                
                <h4 class="text-lg font-medium text-gray-900 mb-4">다음 파일을 삭제하시겠습니까?</h4>
                
                <div class="bg-gray-50 border border-gray-200 rounded-lg overflow-hidden mb-6">
                    <table class="min-w-full divide-y divide-gray-200">
                        <tbody class="divide-y divide-gray-200">
                            <tr>
                                <th scope="row" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider bg-gray-50 w-1/3">파일 ID</th>
                                <td class="px-6 py-4 text-sm text-gray-900">@Model.FileAttachId</td>
                            </tr>
                            <tr>
                                <th scope="row" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider bg-gray-50">파일명</th>
                                <td class="px-6 py-4 text-sm text-gray-900">@Model.FileName</td>
                            </tr>
                            <tr>
                                <th scope="row" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider bg-gray-50">파일 유형</th>
                                <td class="px-6 py-4 text-sm text-gray-900">@Model.FileType</td>
                            </tr>
                            <tr>
                                <th scope="row" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider bg-gray-50">파일 크기</th>
                                <td class="px-6 py-4 text-sm text-gray-900">@FormatFileSize(Model.FileLength)</td>
                            </tr>
                            <tr>
                                <th scope="row" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider bg-gray-50">업로드 날짜</th>
                                <td class="px-6 py-4 text-sm text-gray-900">@(Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm:ss"))</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="FileAttachId" />
                    
                    <div class="flex justify-end space-x-3">
                        <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                            취소
                        </a>
                        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                            삭제 확인
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@functions {
    private string FormatFileSize(long? bytes)
    {
        if (bytes == null) return "0 B";
        
        long fileSize = bytes.Value;
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        int order = 0;
        
        while (fileSize >= 1024 && order < sizes.Length - 1)
        {
            order++;
            fileSize = fileSize / 1024;
        }
        
        return $"{fileSize:0.##} {sizes[order]}";
    }
}