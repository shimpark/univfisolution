@model UnivFI.WebUI.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "로그인";
}

<div class="container mx-auto px-4 py-6">
    <div class="flex justify-center">
        <div class="w-full max-w-md">
            <div class="bg-white rounded-lg shadow-md overflow-hidden mb-6">
                <div class="bg-blue-600 text-white px-6 py-4">
                    <h4 class="text-xl font-semibold text-center">로그인</h4>
                </div>
                <div class="p-6">
                    <div class="text-center mb-6">
                        <i class="fas fa-shield-alt text-blue-600" style="font-size: 3rem;"></i>
                    </div>

                    <!-- 일반 오류 메시지 영역 -->
                    <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

                    <!-- 웹 로그인 (컨트롤러 기반 인증) -->
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="mb-4">
                            <div class="relative">
                                <input asp-for="UserName"
                                    class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 peer pt-6"
                                    placeholder=" " required />
                                <label asp-for="UserName"
                                    class="absolute text-sm text-gray-500 duration-300 transform -translate-y-3 scale-75 top-4 z-10 origin-[0] left-4 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-3">
                                    사용자 이름
                                </label>
                                <span asp-validation-for="UserName" class="text-red-500 text-sm mt-1"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="relative">
                                <input asp-for="Password" type="password"
                                    class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 peer pt-6"
                                    placeholder=" " required />
                                <label asp-for="Password"
                                    class="absolute text-sm text-gray-500 duration-300 transform -translate-y-3 scale-75 top-4 z-10 origin-[0] left-4 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-3">
                                    비밀번호
                                </label>
                                <span asp-validation-for="Password" class="text-red-500 text-sm mt-1"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="inline-flex items-center">
                                <input asp-for="RememberMe"
                                    class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                                <span class="ml-2 text-gray-700">로그인 상태 유지</span>
                            </label>
                        </div>

                        <div>
                            <button type="submit"
                                class="w-full px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors">
                                <i class="fas fa-sign-in-alt mr-2"></i>로그인
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index"
                    class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors">
                    <i class="fas fa-arrow-left mr-1"></i>홈으로 돌아가기
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}