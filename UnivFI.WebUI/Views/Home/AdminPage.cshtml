@{
    ViewData["Title"] = "관리자 페이지";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-center">
        <div class="w-full md:w-3/4 lg:w-2/3">
            <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
                <div class="bg-red-600 text-white px-6 py-4">
                    <h4 class="text-xl font-semibold">관리자 페이지</h4>
                </div>
                <div class="p-6">
                    <div class="text-center mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </div>

                    <div class="bg-red-100 border-l-4 border-red-600 text-red-700 p-4 mb-6">
                        <h4 class="font-bold">관리자 인증 성공!</h4>
                        <p>이 페이지는 관리자 권한이 있는 사용자만 볼 수 있습니다.</p>
                    </div>

                    @if (ViewBag.UserInfo != null)
                    {
                            <div class="bg-white border rounded-lg mb-6 overflow-hidden">
                                <div class="bg-gray-100 px-4 py-3 border-b">
                                    <h5 class="font-semibold">관리자 정보</h5>
                                </div>
                                <div class="divide-y">
                                    <div class="flex justify-between px-4 py-3">
                                        <span class="text-gray-600">ID:</span>
                                        <span class="font-semibold">@ViewBag.UserInfo.Id</span>
                                    </div>
                                    <div class="flex justify-between px-4 py-3">
                                        <span class="text-gray-600">관리자명:</span>
                                    <span class="font-semibold">@ViewBag.UserInfo.UserName</span>
                                    </div>
                                    <div class="flex justify-between px-4 py-3">
                                        <span class="text-gray-600">이름:</span>
                                        <span class="font-semibold">@ViewBag.UserInfo.Name</span>
                                    </div>
                                    <div class="flex justify-between px-4 py-3">
                                        <span class="text-gray-600">이메일:</span>
                                        <span class="font-semibold">@ViewBag.UserInfo.Email</span>
                                    </div>
                                    <div class="px-4 py-3">
                                        <div class="mb-2 text-gray-600">권한:</div>
                                        <div class="flex flex-wrap gap-2">
                                            @foreach (var role in ViewBag.UserInfo.Roles)
                                            {
                                                    <span class="bg-red-600 text-white text-xs px-2 py-1 rounded">@role</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                    }

                    <p class="text-gray-700 mb-6">이 페이지에서는 관리자 전용 기능을 제공합니다.</p>

                    <div class="mb-6">
                        <h5 class="text-lg font-semibold mb-3">관리자 기능</h5>
                        <div class="space-y-2">
                            <a href="/User" class="block bg-white border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition">
                                <div class="flex justify-between items-center">
                                    <h5 class="font-medium">사용자 관리</h5>
                                </div>
                                <p class="text-gray-600 text-sm mt-1">사용자 계정 및 권한을 관리합니다.</p>
                            </a>
                            <a href="/UserRole" class="block bg-white border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition">
                                <div class="flex justify-between items-center">
                                    <h5 class="font-medium">역할 관리</h5>
                                </div>
                                <p class="text-gray-600 text-sm mt-1">사용자 역할을 관리합니다.</p>
                            </a>
                            <a href="/Menu" class="block bg-white border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition">
                                <div class="flex justify-between items-center">
                                    <h5 class="font-medium">메뉴 관리</h5>
                                </div>
                                <p class="text-gray-600 text-sm mt-1">애플리케이션 메뉴를 관리합니다.</p>
                            </a>
                        </div>
                    </div>

                    <div class="text-center">
                        <a asp-controller="Home" asp-action="Index" class="inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                            홈으로 돌아가기
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script>
            $(document).ready(function () {
                console.log('관리자 페이지 초기화');

                // 관리자 페이지 기능 초기화
                initAdminPage();
            });

            // 관리자 페이지 기능 초기화 함수
            function initAdminPage() {
                // auth-utils.js에서 제공하는 hasAdminRole 함수를 사용하여 관리자 권한 확인
                if (!hasAdminRole()) {
                    console.warn('관리자 권한이 없는 사용자가 접근을 시도했습니다.');
                    // 필요시 추가 처리
                }

                // 예제: API 호출 함수 (필요시 활용)
                function callSecureApi(endpoint) {
                    // auth-utils.js의 setupAuthInterceptors 함수에 의해 
                    // Authorization 헤더가 자동으로 추가됨
                    return $.ajax({
                        url: endpoint || '/api/secure-endpoint',
                        type: 'GET'
                    }).then(function (data) {
                        return data;
                    }).catch(function (error) {
                        console.error('API 호출 실패:', error);
                        throw error;
                    });
                }

                // 필요시 callSecureApi 호출 예제
                // callSecureApi('/api/some-endpoint').then(function(data) {
                //     console.log('데이터:', data);
                // });
            }
        </script>
}