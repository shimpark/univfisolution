@{
    ViewData["Title"] = "홈";
}

<div class="container mx-auto px-4 py-10">
    <div class="text-center mb-10">
        <h1 class="text-4xl font-bold mb-3">UnivFI 관리 시스템</h1>
        <p class="text-xl text-gray-600">대학 재정 및 사용자 관리를 위한 웹 애플리케이션</p>
    </div>

    <div class="flex justify-center mb-10">
        <div class="w-full max-w-4xl">
            <div class="bg-white rounded-lg shadow-md">
                <div class="p-6">
                    <h2 class="text-2xl font-semibold mb-6">바로가기 메뉴</h2>

                    <div class="grid md:grid-cols-2 gap-6">
                        <!-- 모든 사용자 접근 가능 버튼 -->
                        <div>
                            <div class="h-full bg-white border rounded-lg shadow-sm p-5">
                                <h5 class="text-lg font-semibold mb-2">
                                    <i class="bi bi-info-circle text-blue-600 mr-2"></i>
                                    공개 메뉴
                                </h5>
                                <p class="text-gray-600 mb-4">로그인 없이 모든 사용자가 접근할 수 있는 메뉴입니다.</p>
                                <a asp-controller="Home" asp-action="Privacy"
                                    class="inline-block px-4 py-2 border border-blue-600 text-blue-600 rounded hover:bg-blue-600 hover:text-white transition-colors">
                                    개인정보처리방침
                                </a>
                            </div>
                        </div>

                        <!-- 인증된 사용자만 접근 가능한 버튼들 -->
                        <div>
                            <div class="h-full bg-white border rounded-lg shadow-sm p-5">
                                <h5 class="text-lg font-semibold mb-2">
                                    <i class="bi bi-shield-lock text-green-600 mr-2"></i>
                                    인증 필요 메뉴
                                </h5>
                                <p class="text-gray-600 mb-4">로그인한 사용자만 접근할 수 있는 메뉴입니다.</p>

                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <!-- 비인증 사용자에게 보이는 UI -->
                                    <div class="space-y-2">
                                        <a asp-controller="Account" asp-action="Login"
                                            asp-route-returnUrl="@Url.Action("SecuredPage", "Home")"
                                            class="block w-full text-center px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition-colors">
                                            <i class="bi bi-shield-lock mr-2"></i>보안 페이지 (로그인 필요)
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <!-- 인증된 사용자에게 보이는 UI -->
                                    <div class="space-y-2">
                                        <a asp-controller="Home" asp-action="SecuredPage"
                                            class="block w-full text-center px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition-colors">
                                            <i class="bi bi-shield-check mr-2"></i>보안 페이지
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- 관리자만 접근 가능한 버튼들 -->
                        <div class="md:col-span-2 mt-2">
                            <div class="bg-white border rounded-lg shadow-sm p-5">
                                <h5 class="text-lg font-semibold mb-2">
                                    <i class="bi bi-gear text-red-600 mr-2"></i>
                                    관리자 메뉴
                                </h5>
                                <p class="text-gray-600 mb-4">관리자 권한이 있는 사용자만 접근할 수 있는 메뉴입니다.</p>

                                @if (User.Identity.IsAuthenticated && User.IsInRole("Administrators"))
                                {
                                    <!-- 관리자에게 보이는 UI -->
                                    <div class="flex flex-wrap gap-2">
                                        <a asp-controller="User" asp-action="Index"
                                            class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition-colors">
                                            <i class="bi bi-people mr-2"></i>사용자 관리
                                        </a>
                                        <a asp-controller="UserRole" asp-action="Index"
                                            class="px-4 py-2 border border-red-600 text-red-600 rounded hover:bg-red-600 hover:text-white transition-colors">
                                            <i class="bi bi-shield mr-2"></i>역할 관리
                                        </a>
                                        <a asp-controller="Home" asp-action="AdminPage"
                                            class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition-colors">
                                            <i class="bi bi-gear-fill mr-2"></i>관리자 페이지
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <!-- 비관리자에게 보이는 UI -->
                                    <div class="flex flex-wrap gap-2">
                                        <a asp-controller="Account" asp-action="Login"
                                            asp-route-returnUrl="@Url.Action("Index", "User")"
                                            class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition-colors">
                                            <i class="bi bi-people mr-2"></i>사용자 관리 (로그인 후 권한 필요)
                                        </a>
                                        <a asp-controller="Account" asp-action="Login"
                                            asp-route-returnUrl="@Url.Action("Index", "UserRole")"
                                            class="px-4 py-2 border border-red-600 text-red-600 rounded hover:bg-red-600 hover:text-white transition-colors">
                                            <i class="bi bi-shield mr-2"></i>역할 관리 (로그인 후 권한 필요)
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
